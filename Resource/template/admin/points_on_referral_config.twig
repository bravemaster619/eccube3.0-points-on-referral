{% form_theme por_form 'Form/bootstrap_3_horizontal_layout.html.twig' %}
<link rel="stylesheet" href="{{ app.config.plugin_html_urlpath }}/PointsOnReferral/admin.css">
<div id="points_on_referral_config_box" class="box">
    {{ form_row(por_form._token) }}
    <div class="box-header">
        <h3 class="box-title">{{'admin.form.rewards.title'|trans}}</h3>
    </div>
    <div class="box-body">
        <div class="form-group">
            <div class="col-sm-3">
                <label class="control-label">{{ form_widget(por_form.referrer_rewards_enabled) }}</label>
            </div>
            <div class="col-sm-9">
                {{ form_widget(por_form.referrer_rewards) }}
                {{ form_errors(por_form.referrer_rewards) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3">
                <label class="control-label">{{ form_widget(por_form.referee_rewards_enabled) }}</label>
            </div>
            <div class="col-sm-9">
                {{ form_widget(por_form.referee_rewards) }}
                {{ form_errors(por_form.referee_rewards) }}
            </div>
        </div>
    </div>
</div>
